<?xml version="1.0"?>

<build subject="xwindow" stage="05" envpath="/bin:/usr/bin:/sbin:/usr/sbin:/tools/bin:/tools/sbin" chroot="yes">

	<globals>
		export XORG_PREFIX="/usr"
		export XORG_CONFIG="--prefix=$XORG_PREFIX --sysconfdir=/etc --localstatedir=/var --disable-static"
	</globals>
	
	<phase seq="1">
	
		<entry name="Setting up the Xorg Build Environment" type="script/bash" seq="1">
			<action when="after" seq="1">
				<line verbos="yes">
					cat > /etc/profile.d/xorg.sh &lt;&lt;-EOF
					XORG_PREFIX="$XORG_PREFIX"
					XORG_CONFIG="--prefix=\$XORG_PREFIX --sysconfdir=/etc --localstatedir=/var --disable-static"
					export XORG_PREFIX XORG_CONFIG
					EOF
				</line>
				<line verbos="yes">chmod 644 /etc/profile.d/xorg.sh</line>
				
				<line verbos="yes">find dest/include \( -name .install -o -name ..install.cmd \) -delete</line>
				<line verbos="yes">cp -rv dest/include/* /usr/include</line>
			</action>
		</entry>
				
	</phase>
	
</build>

